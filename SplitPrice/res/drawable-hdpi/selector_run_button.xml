<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/rb_gradient_pressed_from"
                android:endColor="@color/rb_gradient_pressed_to"
                android:angle="270" />
            <stroke
			     android:width="1dp"
			     android:color="@color/rb_stroke"/>
   			<padding
                android:left="30dp"
                android:top="30dp"
                android:right="30dp"
                android:bottom="30dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/rb_gradient_pressed_from"
                android:endColor="@color/rb_gradient_pressed_to"
                android:angle="270" />
            <stroke
			     android:width="1dp"
			     android:color="@color/rb_stroke"/>
   			<padding
                android:left="30dp"
                android:top="30dp"
                android:right="30dp"
                android:bottom="30dp" />
        </shape>
    </item>

    <item>        
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/rb_inside_gradient_from"
                android:endColor="@color/rb_inside_gradient_to"
                android:angle="270" />
            <stroke
			     android:width="1dp"
			     android:color="@color/rb_stroke"/>
   			<padding
                android:left="30dp"
                android:top="30dp"
                android:right="30dp"
                android:bottom="30dp" />
        </shape>
    </item>
</selector>